@using System.Security.Claims
@model IEnumerable<KoiPool_Project.Models.UserOrderModel>
@{
    ViewData["title"] = "Checkout List";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KDC Vietnam</title>
    <link rel="stylesheet" href="~/css/quanli.css">
   @*  <script defer src="~/js/quanli.js"></script> *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://kit.fontawesome.com/c781fd97e2.js" crossorigin="anonymous"></script>
    <link rel="shortcut icon" href="~/images/Logo.png" type="image/x-icon">
</head>
<body>

    <div class="khung-chinh">
        <!-- Sidebar -->
        <div class="thanh-ben">
            <img src="~/images/Logo.png" alt="Logo">
            <h1>KDC Vietnam</h1>
            <ul>
                <li><a href="#"><i class="fas fa-user-circle"></i> Lịch sử đơn hàng</a></li>
                <li><a href="#"><i class="fas fa-project-diagram"></i> Quản lí thi công</a></li>
            </ul>
        </div>

        <!-- Header -->
        <div class="thanh-dau">
            <div class="bieu-tuong">
                <i class="fas fa-bell"></i>
                <i class="fas fa-envelope"></i>
            </div>
            <div class="ten-nguoi-dung">@User.Identity.Name</div>
        </div>

        <!-- Nội dung chính -->
        <div class="noi-dung-chinh">

            <!-- Phần Thông Tin Cá Nhân -->

            <!-- Phần Lịch Sử Đơn Hàng -->
            <div class="phan lich-su-don-hang">
                <h2>Lịch Sử Đơn Hàng</h2>
                <div id="don-hang-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Request ID</th>
                                <th scope="col">Request Type</th>
                                <th scope="col">Request Area</th>
                                <th scope="col">Name</th>
                                <th scope="col">PhoneNumber</th>
                                <th scope="col">Address</th>
                                <th scope="col">Status</th>
                                <th scope="col">RequestContent</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model){
                                <tr>
                                    <th scope="row">1</th>
                                    <td>@item.OrderCode</td>
                                    <td>@item.ServiceType</td>
                                    <td>@item.GardenArea</td>
                                    <td>@item.FullName</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Address</td>
                                    <td>@item.Status</td>
                                    <td>@item.RequestContent</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Phần Quản Lý Thanh Toán -->
            

        </div>
    </div>
</body>
</html>